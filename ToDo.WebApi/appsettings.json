{
  "ConnectionStrings": {
    "Default": "User ID=postgres;Password=qwerty;Host=localhost;Port=5433;Database=myDataBase;Connection Lifetime=0;",
    "MongoDb": "mongodb://admin:qwerty@localhost:27017"
  },
  "Mongo": {
    "DbName": "FileStore"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",

  "Keycloak": {
    "Authority": "https://your-keycloak-server/auth/realms/your-realm",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "Resource": "your-client-id"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "AnsiConsoleTheme::Literate"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ToDo",
      "Version": "1.0.0"
    }
  }
}
